<p id="notice"><%= notice %></p>

<h1>Shorteners</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">Id</th>
      <th colspan="1">Url</th>
      <th colspan="1">Show</th>
      <th colspan="1">Edit</th>
      <th colspan="1">Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @shorteners.each do |shortener| %>
      <tr>
        <td><%= shortener.id %></td>
        <td><%= shortener.shortened_url%></td>
        <td><%= link_to 'Show', shortener %></td>
        <td><%= link_to 'Edit', edit_shortener_path(shortener) %></td>
        <td><%= link_to 'Destroy', shortener, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shortener', new_shortener_path %>
